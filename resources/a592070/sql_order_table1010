alter table ORDER_DATA drop constraint ORDER_DATA_ACCOUNT_USERNAME_FK;
alter table ORDER_TABLE drop column PRICE;

alter table ORDER_TABLE
	add username varchar2(255) not null;

alter table ORDER_TABLE
	add constraint ORDER_TABLE_ACCOUNT_USERNAME_FK
		foreign key (username) references ACCOUNT;

alter table ORDER_TABLE drop constraint ORDER_TABLE_ORDER_DATA_SN_FK;

alter table ORDER_TABLE drop column SN_NO;

